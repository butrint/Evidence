<Window x:Class="Evidence.RolesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Evidence"
        mc:Ignorable="d"
        Title="Rolet" Height="275" Width="436" WindowStartupLocation="CenterScreen" Icon="logo evdienca.png" ResizeMode="NoResize">
    <Grid Background="#FF9B8BA4">
        <TextBox x:Name="txtrole" HorizontalAlignment="Left" Height="23" Margin="79,142,0,0" TextWrapping="Wrap" Text="{Binding SelectedItem.Role, ElementName=dGrid, Mode=OneWay}" VerticalAlignment="Top" Width="261"/>
        <Label Content="Roli" HorizontalAlignment="Left" Margin="79,119,0,0" VerticalAlignment="Top" Height="23" Width="63"/>
        <Button x:Name="btnInsertR" Content="Regjistro" HorizontalAlignment="Left" Height="35" Margin="79,182,0,0" VerticalAlignment="Top" Width="125" Click="btnInsertR_Click"/>
        <Button x:Name="btnNewRecord" Content="Rekord i Ri" HorizontalAlignment="Left" Height="35" Margin="215,182,0,0" VerticalAlignment="Top" Width="125" Click="btnNewRecordRole_Click"/>
        <Label Content="REGJISTRIMI I ROLEVE" HorizontalAlignment="Left" Margin="79,55,0,0" VerticalAlignment="Top" FontSize="14" FontWeight="Bold" Width="266"/>

    </Grid>

</Window>
