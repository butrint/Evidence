<Window x:Class="Evidence.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Evidence"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid x:Name="Panel" KeyDown="Panel_KeyDown">
        <TextBox x:Name="Username" HorizontalAlignment="Left" Height="23" Margin="196,143,0,0" TextWrapping="Wrap" ToolTip="Username" VerticalAlignment="Top" Width="120"/>
        <PasswordBox x:Name="Password" HorizontalAlignment="Left" Height="23" Margin="196,181,0,0" ToolTip="Password" PasswordChar="*" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="login" Content="Login" HorizontalAlignment="Left" Margin="196,225,0,0" VerticalAlignment="Top" Width="120" Click="login_Click"/>
        <Label x:Name="Error" Content="" Canvas.Left="10" Canvas.Top="443" FontFamily="Century Gothic" Foreground="Red" FontSize="13.333" Margin="10,267,10,10"/>

    </Grid>
</Window>
